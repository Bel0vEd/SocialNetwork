@using Microsoft.AspNetCore.Identity
@model SocialNetwork.ViewModels.ChangeRoleViewModel

<h2 class="white-front">Изменение ролей для пользователя @Model.UserEmail</h2>

<form class="white-front" asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    <button type="submit" class="btn btn-success">Сохранить</button>
</form>