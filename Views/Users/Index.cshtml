@model IEnumerable<SocialNetwork.Models.User>
@{
    ViewBag.Title = "Список пользователей";
}
@if (User.IsInRole("admin"))
{
    <a asp-action="Create">Добавить пользователя</a>
}
<table class="table">
    <tr><th>Имя</th><th>Фамилия</th><th>Почта</th><th>Год рождения</th><th></th></tr>
    @foreach (var user in Model)
    {
        {
            <tr>
                <td><a class="text-blue" asp-route-id="@user.ProfileLink" asp-controller="Profile" asp-action="Wall">@user.FirstName</a></td>
                <td>@user.SecondName</td>
                <td>@user.Email</td>
                <td>@user.Year</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        @if (User.IsInRole("admin"))
                        {
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                            <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                            <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                        }
                        else if (User.Identity.IsAuthenticated && user.Email == User.Identity.Name)
                        {
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                            <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                            <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                        }
                    </form>
                </td>
            </tr>
        }
    }
</table>
